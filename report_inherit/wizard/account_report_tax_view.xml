<?xml version="1.0" encoding="utf-8"?>
<odoo>
 
    <record id="accounting_tax_report_view" model="ir.ui.view">
        <field name="name">GST Detail Reports</field>
        <field name="model">gst.detail.account.tax.reports</field>
        <field name="inherit_id" ref="account.account_common_report_view"/>
        <field name="arch" type="xml">
            <data>

            	<field name="company_id" position="replace"/>
            	<xpath expr="//field[@name='journal_ids']" position="after">
         			<field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
         		</xpath>

                <field name="journal_ids" position="replace"/>
                <field name="target_move" position="replace"/>
                <xpath expr="//field[@name='date_from']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//field[@name='date_to']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>

            </data>
              	
                
        </field>
    </record>

    <record id="action_account_tax_report" model="ir.actions.act_window">
        <field name="name">GST Detail Reports</field>
        <field name="res_model">gst.detail.account.tax.reports</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="accounting_tax_report_view"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_account_report"  sequence="142" name="GST Detail Report" action="action_account_tax_report" parent="skit_account_reports.menu_finance_legal_statement" />

</odoo>
